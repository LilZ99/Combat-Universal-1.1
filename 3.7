local function PiercingRaycast(origin, dir, targetChar, ignoreList)
    local params = RaycastParams.new()
    params.FilterType = Enum.RaycastFilterType.Exclude
    params.IgnoreWater = true
    
    local currentOrigin = origin
    for i = 1, 4 do 
        params.FilterDescendantsInstances = ignoreList
        local res = workspace:Raycast(currentOrigin, dir, params)
        
        if not res then return true end 
        if res.Instance:IsDescendantOf(targetChar) then return true end 
        
        -- Bypass l·ªói Delta API b·∫±ng c√°ch √©p ki·ªÉu tostring cho Material
        local matName = tostring(res.Instance.Material):lower()
        local instName = res.Instance.Name:lower()
        
        if res.Instance.Transparency > 0.1 or not res.Instance.CanCollide or instName:find("fence") or instName:find("glass") or matName:find("leaves") or matName:find("glass") or matName:find("forcefield") then
            table.insert(ignoreList, res.Instance)
            currentOrigin = res.Position + (dir.Unit * 0.5) 
        else
            return false 
        end
    end
    return false
end

local PartsToCheck = {"Head", "HumanoidRootPart", "UpperTorso"}
local function IsVisible(targetChar, rootPart, dist)
    if not Cfg.WallCheck or not targetChar then return true end
    local _, onScreen = Cam:WorldToViewportPoint(rootPart.Position)
