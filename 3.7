        if part then
            local ignoreList = {}
            for _, v in ipairs(baseIgnore) do table.insert(ignoreList, v) end
            local dir = part.Position - origin
            if PiercingRaycast(origin, dir, targetChar, ignoreList) then return true end
        end
    end
    return false
end

