        if res.Instance.Transparency >= 0.3 then isFakeWall = true end
        if res.Instance.CanCollide == false then isFakeWall = true end
        if instName:find("fence") or instName:find("glass") or instName:find("leaf") or instName:find("tree") then isFakeWall = true end
        
        -- B·ªçc pcall ƒë·ªÉ ch·ªëng l·ªói Enum.Material c·ªßa c√°c b·∫£n c≈©
        pcall(function()
            local mat = tostring(res.Instance.Material):lower()
