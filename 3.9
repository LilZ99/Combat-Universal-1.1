local function IsVisible(targetChar, rootPart)
    -- N·∫øu Cfg.XuyenTuong l√† TRUE (B·∫≠t Wallhack) -> Lu√¥n lu√¥n coi l√† nh√¨n th·∫•y
    if Cfg.XuyenTuong then return true end
