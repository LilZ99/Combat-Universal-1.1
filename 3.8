-- =====================================================================
local RayParams = RaycastParams.new()
RayParams.FilterType = Enum.RaycastFilterType.Exclude
RayParams.IgnoreWater = true

local function IsVisibleSphere(targetChar, rootPart, dist)
    if not Cfg.WallCheck or not targetChar then return true end
    
    -- T·ªêI ∆ØU C·ª∞C ƒê·ªò (FOV Culling Matrix): ƒê·ªãch kh√¥ng ·ªü trong g√≥c nh√¨n Camera -> D·ª´ng t√≠nh to√°n lu√¥n
    local _, onScreen = Cam:WorldToViewportPoint(rootPart.Position)
    if not onScreen then return false end 

    local origin = Cam.CFrame.Position
    local baseIgnore = {LP.Character, Cam, VR}
    for _, acc in ipairs(targetChar:GetChildren()) do 
        if acc:IsA("Accessory") or acc:IsA("Hat") then table.insert(baseIgnore, acc) end 
    end

    local dir = rootPart.Position - origin
    
    for i = 1, 3 do -- Xuy√™n t·ªëi ƒëa 3 l·ªõp
        RayParams.FilterDescendantsInstances = baseIgnore
        -- D√πng Spherecast b√°n k√≠nh 0.5 (nh∆∞ vi√™n ƒë·∫°n to) ƒë·ªÉ t·ª± ƒë·ªông lu·ªìn l√°ch qua r√†o l∆∞·ªõi
        local res = workspace:Spherecast(origin, 0.5, dir, RayParams)
        
        if not res then return true end 
        if res.Instance:IsDescendantOf(targetChar) then return true end 
        
        local matName = tostring(res.Instance.Material):lower()
        local instName = res.Instance.Name:lower()
        
        if res.Instance.Transparency > 0.1 or not res.Instance.CanCollide or instName:find("fence") or instName:find("glass") or matName:find("leaves") or matName:find("glass") or matName:find("forcefield") then
            table.insert(baseIgnore, res.Instance)
            origin = res.Position + (dir.Unit * 1) -- ƒê·∫©y qua v·∫≠t c·∫£n
            dir = rootPart.Position - origin
        else
            return false 
        end
    end
    return false
end

