local WPN_NAMES = {"gun","pistol","rifle","shotgun","sniper","smg","lmg","rpg","launcher","weapon","firearm","ak","glock","deagle","m4","m16","mp5","mp7","mp9","uzi","vector","scar","famas","aug","awp","awm","knife","sword","blade","katana","machete","axe","dagger","karambit","bowie","shoot","fire","kill","attack","damage"}
local WPN_SAFE = {"shovel","hoe","rake","seed","water","fish","rod","pole","bucket","pail","wrench","screwdriver","paint","brush","key","keycard","flashlight","torch","lantern","camera","binocular","phone","radio","tablet","medkit","bandage","medicine","health","food","drink","snack","money"}

local function AnalyzeWeapon(tool)
    if not tool or not tool:IsA("Tool") then return false, "" end
    local cached = WPN_CACHE[tool]; if cached and (tick() - cached.t) < 5 then return cached.w, cached.n end

    local name = tool.Name:lower():gsub("[%-%_%.%s%d]","")
    for _, s in ipairs(WPN_SAFE) do if name:find(s, 1, true) then WPN_CACHE[tool] = {w=false, n="", t=tick()}; return false, "" end end
    
    local score = 0
    for _, n in ipairs(WPN_NAMES) do if name:find(n, 1, true) then score = 50; break end end
    pcall(function()
        local count = 0
        for _, d in ipairs(tool:GetDescendants()) do
            if count > 10 then break end; count += 1
            local dn = d.Name:lower()
            if (d:IsA("BasePart") or d:IsA("Attachment")) and (dn:find("muzzle") or dn:find("barrel") or dn:find("trigger")) then score += 10 end
        end
    end)
    
    local isW = (score >= 10); local resName = isW and tool.Name or ""
    WPN_CACHE[tool] = {w=isW, n=resName, t=tick()}
    return isW, resName
end

-- ==========================================
-- üëÅÔ∏è RAYCAST XUY√äN TH·∫§U ƒêA T·∫¶NG V6 (L√ÅCH M·ªåI V·∫¨T C·∫¢N)
-- ==========================================
local RayParams = RaycastParams.new()
RayParams.FilterType = Enum.RaycastFilterType.Exclude
RayParams.IgnoreWater = true

local function IsVisible(targetChar, rootPart)
    if not Cfg.WallCheck then return true end -- T·∫Øt Check = Nh√¨n Xuy√™n T∆∞·ªùng
    if not targetChar or not rootPart then return false end

    local origin = Cam.CFrame.Position
    local dir = rootPart.Position - origin
    
    local ignore = {LP.Character, Cam, VR, HitboxFolder}
    for _, acc in ipairs(targetChar:GetChildren()) do 
        if acc:IsA("Accessory") or acc:IsA("Hat") then table.insert(ignore, acc) end 
    end

    local currentOrigin = origin
    for i = 1, 6 do -- ƒê√¢m xuy√™n t·ªëi ƒëa 6 l·ªõp v·∫≠t th·ªÉ m·ªèng/·∫£o
        RayParams.FilterDescendantsInstances = ignore
        local res = workspace:Raycast(currentOrigin, dir, RayParams)
        
        if not res then return true end -- Nh√¨n th·∫≥ng
        if res.Instance:IsDescendantOf(targetChar) then return true end -- Tr√∫ng ƒë√≠ch
        
        local isPenetrable = false
        local instName = res.Instance.Name:lower()
        
        if res.Instance.Transparency > 0.15 or res.Instance.CanCollide == false then isPenetrable = true end
        if instName:find("fence") or instName:find("glass") or instName:find("leaf") or instName:find("mesh") or instName:find("wire") then isPenetrable = true end
        
        pcall(function()
            local mat = tostring(res.Instance.Material):lower()
            if mat:find("leaves") or mat:find("glass") or mat:find("forcefield") then isPenetrable = true end
        end)

        if isPenetrable then
            table.insert(ignore, res.Instance)
            -- Nh√≠ch tia qu√©t t·ªõi tr∆∞·ªõc 0.1 stud ƒë·ªÉ ch·∫Øc ch·∫Øn v∆∞·ª£t qua b·ªÅ m·∫∑t v·∫≠t c·∫£n m·ªèng
            currentOrigin = res.Position + (dir.Unit * 0.1) 
        else
            return false -- ƒê·ª•ng t∆∞·ªùng ƒë·∫∑c
        end
    end
    return false
end

