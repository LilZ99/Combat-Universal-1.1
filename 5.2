local RayParams = RaycastParams.new(); RayParams.FilterType = Enum.RaycastFilterType.Exclude; RayParams.IgnoreWater = true

local function IsVisible(targetChar, rootPart)
    if not targetChar or not rootPart then return false end
    local origin = Cam.CFrame.Position
    local dir = rootPart.Position - origin
    local ignore = {LP.Character, Cam, VRFolder}
    for _, acc in ipairs(targetChar:GetChildren()) do if acc:IsA("Accessory") or acc:IsA("Hat") then table.insert(ignore, acc) end end

    local currentOrigin = origin
    for i = 1, 5 do 
        RayParams.FilterDescendantsInstances = ignore
        local res = workspace:Raycast(currentOrigin, dir, RayParams)
        if not res then return true end 
        if res.Instance:IsDescendantOf(targetChar) then return true end 
        
        local isPenetrable = false
        if res.Instance.Transparency > 0.15 or res.Instance.CanCollide == false then isPenetrable = true end
        local instName = res.Instance.Name:lower()
        if instName:find("fence") or instName:find("glass") or instName:find("leaf") or instName:find("tree") then isPenetrable = true end
        pcall(function() local mat = tostring(res.Instance.Material):lower(); if mat:find("leaves") or mat:find("glass") or mat:find("forcefield") then isPenetrable = true end end)

        if isPenetrable then table.insert(ignore, res.Instance); currentOrigin = res.Position + (dir.Unit * 0.1) else return false end
    end
    return false
end

