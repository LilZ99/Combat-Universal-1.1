    if not isW then pcall(function() for _, d in ipairs(tool:GetDescendants()) do if d:IsA("BasePart") and (d.Name:lower():find("muzzle") or d.Name:lower():find("blade")) then isW = true; break end end end) end
    WPN_CACHE[tool] = {w=isW, n=isW and tool.Name or "", t=tick()}
    return isW, WPN_CACHE[tool].n
end

