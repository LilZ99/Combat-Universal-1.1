    local Sub = Instance.new("TextLabel",Hdr); Sub.Size=UD2(1,-80,0,15); Sub.Position=UD2(0,50,0,32); Sub.BackgroundTransparency=1; Sub.Text="B·∫¢N FIX L·ªñI T·ªêI TH∆Ø·ª¢NG"; Sub.Font=Enum.Font.GothamMedium; Sub.TextSize=10; Sub.TextColor3=VN.DoCo; Sub.TextXAlignment=Enum.TextXAlignment.Left
    
