    CloseBtn.MouseButton1Click:Connect(function() Tw(Main, {Size=UD2(0,350,0,0), Position=UD2(0.5,-175,0.5,0)}, 0.3); task.wait(0.2); Main.Visible=false end)

    local TabCont = Instance.new("Frame",Main); TabCont.Size=UD2(1,-30,0,38); TabCont.Position=UD2(0,15,0,65); TabCont.BackgroundColor3=VN.NenCard; Instance.new("UICorner",TabCont).CornerRadius=UDim.new(0,8)
